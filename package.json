{
  "name": "ioc-widget-wallet",
  "version": "0.1.0-RC3",
  "description": "Minimal Electron front-end for iocoind on macOS",
  "main": "src/main/main.js",
  "author": {
    "name": "Wizrig",
    "email": "iocoindev@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder --mac dmg"
  },
  "build": {
    "appId": "io.iocoin.wallet",
    "productName": "IOC Widget Wallet",
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.finance"
    },
    "dmg": {
      "contents": [
        {
          "x": 360,
          "y": 170
        },
        {
          "x": 630,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 360,
          "y": 380,
          "type": "file",
          "path": "/Users/taino/Desktop/iocoind"
        },
        {
          "x": 630,
          "y": 380,
          "type": "link",
          "path": "/usr/local/bin",
          "name": "bin"
        }
      ]
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ]
  },
  "dependencies": {
    "axios": "^1.7.2",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3"
  }
}
