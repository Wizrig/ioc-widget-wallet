{
  "name": "ioc-widget-wallet",
  "version": "0.1.0-RC5",
  "description": "Minimal Electron front-end for iocoind",
  "main": "src/main/main.js",
  "author": {
    "name": "Wizrig",
    "email": "iocoindev@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder --mac dmg",
    "build:mac": "electron-builder --mac dmg",
    "build:win": "electron-builder --win nsis",
    "build:linux": "electron-builder --linux AppImage deb"
  },
  "build": {
    "appId": "io.iocoin.wallet",
    "productName": "IOC Widget Wallet",
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.finance",
      "identity": "Joel Bosh (E3UBUT7VX4)",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extraResources": [
        {
          "from": "/Users/taino/Desktop/iocoind",
          "to": "iocoind"
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "extraResources": [
        {
          "from": "/Users/taino/Desktop/daemon-binaries/win64/iocoind.exe",
          "to": "iocoind.exe"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Finance",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "extraResources": [
        {
          "from": "/Users/taino/Desktop/daemon-binaries/linux64/iocoind",
          "to": "iocoind"
        }
      ]
    },
    "afterSign": "build/notarize.js",
    "dmg": {
      "background": "assets/img/dmg-background.png",
      "iconSize": 80,
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 190,
          "y": 190
        },
        {
          "x": 350,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ]
  },
  "dependencies": {
    "axios": "^1.7.2",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3"
  }
}
