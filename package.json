{
  "name": "ioc-widget-wallet",
  "version": "0.1.0-RC3",
  "description": "Minimal Electron front-end for iocoind on macOS",
  "main": "src/main/main.js",
  "author": {
    "name": "Wizrig",
    "email": "iocoindev@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder --mac dmg"
  },
  "build": {
    "appId": "io.iocoin.wallet",
    "productName": "IOC Widget Wallet",
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.finance",
      "identity": "Joel Bosh (E3UBUT7VX4)",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "background": "assets/dmg-background.tiff",
      "iconSize": 80,
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 140,
          "y": 120,
          "type": "file"
        },
        {
          "x": 400,
          "y": 120,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 270,
          "y": 280,
          "type": "file",
          "path": "/Users/taino/Desktop/iocoind"
        }
      ]
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ]
  },
  "dependencies": {
    "axios": "^1.7.2",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3"
  }
}
